#####################################
# APPLICATION
#####################################
APP_NAME="Face Recognition HRIS"
APP_ENV=local
APP_DEBUG=true
APP_URL=http://localhost:8000

#####################################
# DATABASE
#####################################
DB_CONNECTION=mysql
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=

#####################################
# AUTH / SECURITY
#####################################
APP_KEY=
TOKEN_EXPIRED_MINUTES=1440

#####################################
# FILE STORAGE
#####################################
UPLOAD_PATH=storage/uploads
EMPLOYEE_PHOTO_PATH=storage/uploads/employees
ATTENDANCE_PHOTO_PATH=storage/uploads/attendance
MAX_UPLOAD_SIZE=5242880   # 5MB

#####################################
# FACE RECOGNITION SERVICE (PYTHON)
#####################################
FACE_API_BASE_URL=
FACE_API_VERIFY_ENDPOINT=/face/verify
FACE_API_TRAIN_ENDPOINT=/face/train
FACE_API_TIMEOUT=10

#####################################
# GEOLOCATION (OPTIONAL)
#####################################
ENABLE_GEOLOCATION=true

#####################################
# TIME & ATTENDANCE
#####################################
TIMEZONE=Asia/Jakarta
WORK_START_TIME=08:00
LATE_THRESHOLD_MINUTES=15

#####################################
# LOGGING
#####################################
LOG_CHANNEL=file
LOG_PATH=storage/logs/app.log